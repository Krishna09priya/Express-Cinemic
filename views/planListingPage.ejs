<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subscription plans listing page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
     <style>
        .nav-link {
            margin-right: 20px; 
            font-size: 1.1rem; 
        }
        .nav-item{
            font-weight: bold;
        }
        .btn-toggle {
            font-size: 0.9rem;
            padding: 5px 10px;
        }
        .btn-enable {
            width: 75px;
            background-color: #28a745;
            color: white;
        }
        .btn-disable {
            width: 75px;
            background-color: #dc3545;
            color: white;
        }
        #reports{
            margin-top:2px; 
            font-weight:bold; 
            color: #808080; 
            font-size:1.1rem;
        }
        #admin{
            margin-top: 8px; 
            font-weight: bold; 
            font-size:1.1rem;
        }
        #button{
            width: 75px;
        }
        
    </style>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="#"><img src="/images/logo-transparent.png" alt="Logo"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/movie/movie-listing-page">Movies</a></li>
                    <li class="nav-item"><a class="nav-link" href="/users/user-listing-page">Users</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/users/plan-listing-page">Subscription Plans</a></li>
                    <li class="nav-item dropdown">
                        <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" id="reports">Reports</button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Revenue Report</a>
                            <a class="dropdown-item" href="#">Monthly View Count</a>
                            <a class="dropdown-item" href="#">Monthly Subscription Report</a>
                            <a class="dropdown-item" href="#">Movie Rating Report</a>
                        </div>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                        <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" id="admin"><i class="fas fa-user"></i> Admin</button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Change Password</a>
                            <a class="dropdown-item" href="#">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="mt-5 mb-3">
            <div class="row">
                <div class="col-sm-8">
                     <form accept="users/search-plan" method="post" class="input-group">
                        <input type="text" class="form-control" placeholder="Search movies..." name="search">
                        <div class="input-group-append">
                            <button class="input-group-text" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
                    <div class="col-sm-4 text-right mt-1">
                    <button class="btn btn-outline-primary"><a href="/users/addplan">Add Plan</a></button>
                    </div>
            </div>

        <div class="table-responsive mt-5">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Plan</th>
                        <th>Duration</th>
                        <th>Price</th>
                        <th>Description</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <% plans.forEach (plan => { %>
                <tbody>
                    <tr>
                    <td><%=plan.plan%></td>
                    <td><%=plan.duration%></td>
                    <td><%=plan.price%></td>
                    <td><%=plan.description%></td>
                    <td> <button 
                        class="btn btn-toggle blockbtn <%= plan.isEnabled ? 'btn-disable' : 'btn-enable' %>" 
                        id="button-<%= plan._id %>" 
                        data-id="<%= plan._id %>" 
                        onclick="toggleStatus(this)">
                        <%= plan.isEnabled ? 'disable' : 'enable' %>
                    </button></td>
                    </tr>
                </tbody>
                <%})%>
            </table>

            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <!-- Previous Page Link -->
                    <li class="page-item <%= pagination.page === 1 ? 'disabled' : '' %>">
                        <a class="page-link" href="?page=<%= pagination.page - 1 %>&limit=<%= pagination.limit %>" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
    
                    <!-- Page Numbers -->
                    <% for(let i = 1; i <= pagination.totalPages; i++) { %>
                        <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %>&limit=<%= pagination.limit %>"><%= i %></a>
                        </li>
                    <% } %>
    
                    <!-- Next Page Link -->
                    <li class="page-item <%= pagination.page === pagination.totalPages ? 'disabled' : '' %>">
                        <a class="page-link" href="?page=<%= pagination.page + 1 %>&limit=<%= pagination.limit %>" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <script>
        function toggleStatus(button) {
    const planId = button.getAttribute('data-id');
    const currentStatus = button.textContent.trim(); // 'Block' or 'Unblock'
    
    axios.post(`/users/toggle-block/${planId}`)
        .then(response => {
            console.log(response);
            if (response.data.success) {
                // Toggle the button's appearance and text based on the new status
                if (currentStatus === 'disable') {
                    button.classList.remove('btn-disable');
                    button.classList.add('btn-enable');
                    button.textContent = 'Enable';
                } else {
                    button.classList.remove('btn-enable');
                    button.classList.add('btn-disable');
                    button.textContent = 'Disable';
                }
            } else {
                alert('Failed to update user status');
            }
        })
        .catch(error => {
            console.error('Error updating status:', error);
            alert('Error updating status');
        });
}

</script>
</body>
</html>
