<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User's listing page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
     <style>
        .nav-link {
            margin-right: 20px; 
            font-size: 1.1rem; 
        }
        .nav-item{
            font-weight: bold;
        }
        .btn-toggle {
            font-size: 0.9rem;
            padding: 5px 10px;
        }
        .btn-enable {
            background-color: #28a745;
            color: white;
        }
        .btn-disable {
            background-color: #dc3545;
            color: white;
        }
        .email-link {
            color: #007bff;
            text-decoration: none;
        }
        .email-link:hover {
            text-decoration: underline;
        }
        #reports{
            margin-top:2px; 
            font-weight:bold; 
            color: #808080; 
            font-size:1.1rem;
        }
        #admin{
            margin-top: 8px; 
            font-weight: bold; 
            font-size:1.1rem;
        }
        .blockbtn{
            width: 75px;
        }
        
    </style>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="#"><img src="/images/logo-transparent.png" alt="Logo"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/movie/movie-listing-page">Movies</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/users/user-listing-page">Users</a></li>
                    <li class="nav-item" ><a class="nav-link" href="/users/plan-listing-page">Subscription Plans</a></li>
                    <li class="nav-item dropdown">
                        <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" id="reports">Reports</button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/movie/revenue">Revenue Report</a>
                            <a class="dropdown-item" href="/movie/view-count">Movie View Count</a>
                            <a class="dropdown-item" href="/movie/monthly-subscription">Monthly Subscription Report</a>
                            <a class="dropdown-item" href="/movie/movie-rating">Movie Rating Report</a>
                        </div>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                        <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" id="admin"><i class="fas fa-user"></i> Admin</button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Change Password</a>
                            <a class="dropdown-item" href="/logout">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="mt-5 mb-3">
            <div class="row">
                <div class="col-sm-8">
                    <form action='/users/search-user' method="get" class="input-group">
                        <input type="text" class="form-control" placeholder="Search users..." name="search">
                        <div class="input-group-append">
                            <button class="input-group-text" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        <div class="table-responsive mt-5">
            <table class="table table-bordered">
                <thead>
                    <% if(users){users.forEach (user => { %>
                    <tr>
                        <th>Email</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                   <tr>
                        <td><a href="/users/user-view/<%=user._id%>" class="email-link"><%= user.email %></a></td>
                        <td>
                            <button 
                            class="btn btn-toggle blockbtn <%= user.isBlocked ? 'btn-disable' : 'btn-enable' %>" 
                            id="button-<%= user._id %>" 
                            data-id="<%= user._id %>" 
                            onclick="toggleStatus(this)">
                            <%= user.isBlocked ? 'Unblock' : 'Block' %>
                        </button>
                        </td>
                    </tr>
                    <%})}else{%>
                        <p style="color: #ff0000;">No users available</p>
                        <%}%>
                </tbody>
            </table>

            <% if (pagination && pagination.page) { %>
                <!-- Pagination Controls -->
           <nav aria-label="Page navigation">
               <ul class="pagination">
                   <!-- Previous Page Link -->
                   <li class="page-item <%= pagination.page === 1 ? 'disabled' : '' %>">
                       <a class="page-link" href="?page=<%= pagination.page - 1 %>&limit=<%= pagination.limit %>" aria-label="Previous">
                           <span aria-hidden="true">&laquo;</span>
                       </a>
                   </li>
   
                   <!-- Page Numbers -->
                   <% for(let i = 1; i <= pagination.totalPages; i++) { %>
                       <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                           <a class="page-link" href="?page=<%= i %>&limit=<%= pagination.limit %>"><%= i %></a>
                       </li>
                   <% } %>
   
                   <!-- Next Page Link -->
                   <li class="page-item <%= pagination.page === pagination.totalPages ? 'disabled' : '' %>">
                       <a class="page-link" href="?page=<%= pagination.page + 1 %>&limit=<%= pagination.limit %>" aria-label="Next">
                           <span aria-hidden="true">&raquo;</span>
                       </a>
                   </li>
               </ul>
           </nav>
           <% } %> 
            
        </div>
    </div>
<script>
    function toggleStatus(button) {
        const userId = button.getAttribute('data-id');
        const currentStatus = button.textContent.trim(); // 'Block' or 'Unblock'
        
        axios.post(`/users/toggle-block/${userId}`)
            .then(response => {
                console.log(response);
                if (response.data.success) {
                    // Toggle the button's appearance and text based on the new status
                    if (currentStatus === 'Unblock') {
                        button.classList.remove('btn-disable');
                        button.classList.add('btn-enable');
                        button.textContent = 'Block';
                    } else {
                        button.classList.remove('btn-enable');
                        button.classList.add('btn-disable');
                        button.textContent = 'Unblock';
                    }
                } else {
                    alert('Failed to update user status');
                }
            })
            .catch(error => {
                console.error('Error updating status:', error);
                alert('Error updating status');
            });
    }
</script>
</body>
</html>
