<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User History Page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
     <style>
        .nav-link {
            margin-right: 20px; 
            font-size: 1.1rem; 
        }
        .nav-item{
            font-weight: bold;
        }
        th,td{
            text-align: center;
            width: 100px;
        }
        h2{
            text-align: center;
        }
        #reports{
            margin-top:2px; 
            font-weight:bold; 
            color: #808080; 
            font-size:1.1rem;
        }
        #admin{
            margin-top: 8px; 
            font-weight: bold; 
            font-size:1.1rem;
        }
        
    </style>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="#"><img src="/images/logo-transparent.png" alt="Logo"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/movie/movie-listing-page">Movies</a></li>
                    <li class="nav-item"><a class="nav-link" href="/users/user-listing-page">Users</a></li>
                    <li class="nav-item"><a class="nav-link" href="/users/plan-listing-page">Subscription Plans</a></li>
                    <li class="nav-item dropdown">
                        <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" id="reports">Reports</button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/movie/revenue">Revenue Report</a>
                            <a class="dropdown-item" href="/movie/view-count">Movie View Count</a>
                            <a class="dropdown-item" href="/movie/monthly-subscription">Monthly Subscription Report</a>
                            <a class="dropdown-item" href="/movie/movie-rating">Movie Rating Report</a>
                        </div>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                        <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" id="admin"><i class="fas fa-user"></i> Admin</button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Change Password</a>
                            <a class="dropdown-item" href="/logout">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
<%if(user){%>
        <h2 class="text-primary py-4"><%=user.username%></h2>
           <%}%>
        <div class="row mt-5">
            <div class="col-md-6">
                <% if (!msg) { %>
                <h2 class="mb-4">Subscription History</h2>
                
                <h4>Current Subscription</h4>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Plan</th>
                                <th>Start Date</th>
                            </tr>
                        </thead>
                        <% if (currentPlans){currentPlans.map((plan)=>{%>
                        <tbody>
                            <tr>
                                <td><%=plan.plan%></td>
                                <td><%=plan.subscribedDate%></td>
                            </tr>
                        </tbody>
                        <%})}%>
                    </table>
                </div>

                <h4>Previous Subscriptions</h4>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Plan</th>
                                <th>Start Date</th>
                            </tr>
                        </thead>
                        <%if (previousPlans){previousPlans.map((plan)=>{%>
                        <tbody>
                            <tr>
                                <td><%=plan.plan%></td>
                                <td><%=plan.subscribedDate%></td>
                            </tr>
                        </tbody>
                        <%})}%>
                    </table>
                </div>
            </div>


            <div class="col-md-6">
                <% if (!message) { %>
                <h2 class="mt-1" style="margin-bottom: 56px;">Movie Watch History</h2>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Last Watched Date</th>
                            </tr>
                        </thead>
                        <% if (watchHistory){watchHistory.map((movie)=>{%>
                        <tbody>
                            <tr>
                                <td><%=movie.title%></td>
                                <td><%=movie.watchedDate%></td>
                            </tr>
                        </tbody>
                        <%})}%>
                    </table>
                </div>
                <% } else { %>
                    <p style="color: #ff0000;size:20px"><%=message%></p>
                <% } %>
                <% } else { %>
                    <p style="color: #ff0000;size: 20px;"><%=msg%></p>
                <% } %>
            </div>
        </div>

       <!-- Combined Pagination -->
<!-- Combined Pagination -->
<% if (previousPagination && previousPagination.totalPages > 1 || watchHistoryPagination && watchHistoryPagination.totalPages > 1) { %>
    <div class="d-flex justify-content-between mt-4"> <!-- Flex container -->
        <!-- Pagination for Subscription History -->
        <% if (previousPagination && previousPagination.totalPages > 1) { %>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <!-- Previous Page Link -->
                <li class="page-item <%= previousPagination.page === 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= previousPagination.page - 1 %>&limit=<%= previousPagination.limit %>" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                <!-- Page Numbers -->
                <% for (let i = 1; i <= previousPagination.totalPages; i++) { %>
                    <li class="page-item <%= previousPagination.page === i ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>&limit=<%= previousPagination.limit %>"><%= i %></a>
                    </li>
                <% } %>

                <!-- Next Page Link -->
                <li class="page-item <%= previousPagination.page === previousPagination.totalPages ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= previousPagination.page + 1 %>&limit=<%= previousPagination.limit %>" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
        <% } %>

        <!-- Pagination for Movie Watch History -->
        <% if (watchHistoryPagination && watchHistoryPagination.totalPages > 1) { %>
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <!-- Previous Page Link -->
                <li class="page-item <%= watchHistoryPagination.watchPage === 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="?watchPage=<%= watchHistoryPagination.watchPage - 1 %>&watchLimit=<%= watchHistoryPagination.watchLimit %>" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                <!-- Page Numbers -->
                <% for (let i = 1; i <= watchHistoryPagination.totalPages; i++) { %>
                    <li class="page-item <%= watchHistoryPagination.watchPage === i ? 'active' : '' %>">
                        <a class="page-link" href="?watchPage=<%= i %>&watchLimit=<%= watchHistoryPagination.watchLimit %>"><%= i %></a>
                    </li>
                <% } %>

                <!-- Next Page Link -->
                <li class="page-item <%= watchHistoryPagination.watchPage === watchHistoryPagination.totalPages ? 'disabled' : '' %>">
                    <a class="page-link" href="?watchPage=<%= watchHistoryPagination.watchPage + 1 %>&watchLimit=<%= watchHistoryPagination.watchLimit %>" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
        <% } %>
    </div> <!-- End of Flex container -->
<% } %>

</div>
    </div>
</body>
</html>
