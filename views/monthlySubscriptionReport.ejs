    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
     <style>
        .nav-link {
            margin-right: 20px; 
            font-size: 1.1rem; 
        }
        .nav-item{
            font-weight: bold;
        }
        th,td{
            text-align: center;
        }
        h2{
            text-align: center;
        }
        .form-control{
            width: 100px;
        }
        .form-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 20px;
        }
        #reports{
            margin-top:2px; 
            font-weight:bold; 
            color: #808080; 
            font-size:1.1rem;
        }
        #admin{
            margin-top: 8px; 
            font-weight: bold; 
            font-size:1.1rem;
        }
        
    </style>
</head>
<body>
    <div class="container">
         <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="#"><img src="/images/logo-transparent.png" alt="Logo"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/movie/movie-listing-page">Movies</a></li>
                    <li class="nav-item"><a class="nav-link" href="/users/user-listing-page">Users</a></li>
                    <li class="nav-item" ><a class="nav-link" href="/users/plan-listing-page">Subscription Plans</a></li>
                    <li class="nav-item dropdown">
                        <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" id="reports">Reports</button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/movie/revenue">Revenue Report</a>
                            <a class="dropdown-item" href="/movie/view-count">Movie View Count</a>
                            <a class="dropdown-item" href="/movie/monthly-subscription">Monthly Subscription Report</a>
                            <a class="dropdown-item" href="/movie/movie-rating">Movie Rating Report</a>
                        </div>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                        <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" id="admin"><i class="fas fa-user"></i> Admin</button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/movie/change-password">Change Password</a>
                            <a class="dropdown-item" href="/logout">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <h2 class="mt-3">Monthly Subscription Report </h2>
        <div class="form-row">
            <div class="col-sm-4">
                <label for="year">Select Year: </label>
                <select class="form-control" id="year" name="year">
                    <option value="2024">2024</option>
                    <option value="2023">2023</option>
                    <option value="2022">2022</option>
                </select>
            </div>
            <div class="col-sm-4 text-right">
                <label for="month">Select Month: </label>
                <select class="form-control ml-auto" id="month" name="month">
                    <option value="01">January</option>
                    <option value="02">February</option>
                    <option value="03">March</option>
                    <option value="04">April</option>
                    <option value="05">May</option>
                    <option value="06">June</option>
                    <option value="07">July</option>
                    <option value="08">August</option>
                    <option value="09">September</option>
                    <option value="10">October</option>
                    <option value="11">November</option>
                    <option value="12">December</option>
                </select>
            </div>
        </div>


        <div class="table-responsive mt-5">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Plan</th>
                        <th>Subscriptions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Premium</td>
                        <td>11 lakh</td>
                    </tr>
                </tbody>
            </table>
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
