<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Listing Page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

     <style>
        .nav-link {
            margin-right: 20px; 
            font-size: 1.1rem; 
        }
        .nav-item{
            font-weight: bold;
        }
        th,td{
            text-align: center;
        }
        #reports{
            margin-top:2px; 
            font-weight:bold; 
            color: #808080; 
            font-size:1.1rem;
        }
        #admin{
            margin-top: 8px; 
            font-weight: bold; 
            font-size:1.1rem;
        }
        .link:hover{
            color: white;
            text-decoration: none;
        }
        
    </style>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="#"><img src="/images/logo-transparent.png" alt="Logo"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link active" href="/movie/movie-listing-page">Movies</a></li>
                    <li class="nav-item"><a class="nav-link" href="/users/user-listing-page">Users</a></li>
                    <li class="nav-item"><a class="nav-link" href="/users/plan-listing-page">Subscription Plans</a></li>
                    <li class="nav-item dropdown">
                        <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" id="reports">Reports</button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/movie/revenue">Revenue Report</a>
                            <a class="dropdown-item" href="/movie/view-count">Movie View Count</a>
                            <a class="dropdown-item" href="/movie/monthly-subscription">Monthly Subscription Report</a>
                            <a class="dropdown-item" href="/movie/movie-rating">Movie Rating Report</a>
                        </div>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                        <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" id="admin"><i class="fas fa-user"></i> Admin</button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/movie/change-password">Change Password</a>
                            <a class="dropdown-item" href="/logout">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="mt-5 mb-3">
            <div class="row">
                <div class="col-sm-8">
                        <form method="get" action="/movie/search-movie" class="input-group">
                        <input type="text" class="form-control" placeholder="Search movies..." name="search">
                        <div class="input-group-append">
                            <button class="input-group-text" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                        </form>
                </div>
                <div class="col-sm-4 text-right mt-1">
                    <button type ="button" class="btn btn-outline-primary"><a href="/movie/movie-add" class="link">Add Movie</a></button>
                </div>
            </div>
        </div>

        <div class="table-responsive mt-5">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (movies){movies.forEach (movie => { %>
                    <tr>
                        <td> <%= movie.title%></td>
                        <td>
                            <button type ="button"class="btn btn-outline-primary mr-2"><a href="movie-view/<%= movie._id %>" class="link">View</a></button>
                            <button type ="button"class="btn btn-outline-primary mr-2"><a href="movie-update/<%= movie._id %>" class="link">Edit</a></button>
                            
                            <button type="button" class="btn btn-outline-primary mr-2" id="btn" data-toggle="modal" data-target="#myModal" data-id="<%= movie._id %>">Delete</button>
                            
                            <div class="modal" id="myModal">
                            <div class="modal-dialog">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h4 class="modal-title">Confirm Delete</h4>
                                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
                                <div class="modal-body">
                                  Are you sure you want to delete this movie?
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                                  <button type="button" class="btn btn-danger ml-auto" data-dismiss="modal" onclick="confirmDelete('<%= movie._id %>')" >Confirm</button>
                                </div>
                                </div>
                            </div>
                          </div>
                        </td>
                    </tr>
                    <% })}else{%>
                        <p style="color: #ff0000;">No movies available</p>
                        <%}%>
                </tbody>
            </table>

        <% if (pagination && pagination.page) { %>
             <!-- Pagination Controls -->
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <!-- Previous Page Link -->
                <li class="page-item <%= pagination.page === 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= pagination.page - 1 %>&limit=<%= pagination.limit %>" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                <!-- Page Numbers -->
                <% for(let i = 1; i <= pagination.totalPages; i++) { %>
                    <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>&limit=<%= pagination.limit %>"><%= i %></a>
                    </li>
                <% } %>

                <!-- Next Page Link -->
                <li class="page-item <%= pagination.page === pagination.totalPages ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= pagination.page + 1 %>&limit=<%= pagination.limit %>" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
        <% } %>

        </div>
    </div>
    <script>
        function confirmDelete(movieId) {
            console.log("Deleting movie with ID:", movieId);
            axios.delete('/movie/delete/' + movieId)
                .then(function(response) {
                    location.reload(); 
                })
                .catch(function(error) {
                    alert('Error deleting movie: ' + error.response.data); 
                });
        }
    </script>
</body>
</html>
